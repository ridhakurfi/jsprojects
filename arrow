const add = (a, b) => a + b;

console.log("2 + 3 =", add(2, 3));

const multiply = (x, y) => {
  let result = x * y;
  return result;
};

console.log("5 Ã— 4 =", multiply(5, 4));


const greetings = ["Hello", "Hi", "Yo", "Konnichiwa", "Hey there"];
const names = ["Ridha", "Friend", "Coder", "World", "Mate"];

const randomItem = (arr) => arr[Math.floor(Math.random() * arr.length)];

const greet = () => {
  const message = `${randomItem(greetings)}, ${randomItem(names)}! ğŸ‘‹`;
  console.log(message);
};

greet();
