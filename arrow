const nation = ["Indonesian", "Japanese", "Brazilian", "Indian", "Russian"];
const vehicle = ["Tank", "Warthog", "Humvee", "Aircraft Carrier", "Apache"];

const nat = nation[Math.floor(Math.random() * nation.length)];
const veh = vehicle[Math.floor(Math.random() * vehicle.length)];

const nationalVehicle = () => {
  console.log(`${nat} ${veh}`);
};

nationalVehicle();

function findHighest(scores) {
  return Math.max(...scores);
}

function findLowest(scores) {
  return Math.min(...scores);
}

function calculateAverage(scores) {
  let total = 0;
  for (let i = 0; i < scores.length; i++) total += scores[i];
  return total / scores.length;
}

let student = "James";
let scores = [90, 75, 88, 92, 70];

console.log("ğŸ“Š Report Card");
console.log("===================");
console.log("Student:", student);
console.log("Scores:", scores.join(", "));
console.log("Highest:", findHighest(scores));
console.log("Lowest:", findLowest(scores));
console.log("Average:", calculateAverage(scores).toFixed(2));
console.log("===================");

if (calculateAverage(scores) >= 85) console.log("Result: Excellent! ğŸ†");
else if (calculateAverage(scores) >= 70) console.log("Result: Good ğŸ‘");
else console.log("Result: Needs Improvement ğŸ˜…");
