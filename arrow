const greetings = ["Hello", "Hi", "Yo", "Konnichiwa", "Hey there"];
const names = ["Ridha", "Friend", "Coder", "World", "Mate"];

const randomItem = (arr) => arr[Math.floor(Math.random() * arr.length)];

const greet = () => {
  const message = `${randomItem(greetings)}, ${randomItem(names)}! ðŸ‘‹`;
  console.log(message);
};

greet();

const firstName = ["Billie", "Jim", "Sarah", "Carl", "Carrie"];
const lastName = ["McGrath", "Bailey", "Carmine", "Gertrude", "Hill"];

const randomized = (arr) => arr[Math.floor(Math.random() * arr.length)];

const fullName = () => {
  const allName = `${randomized(firstName)} ${randomized(lastName)}`;
  console.log(allName);
};

fullName();
