let age = 20;
console.log("Initial age:", age);

age = 21;
console.log("Updated age:", age);

const named = "Alex";
console.log("My name is:", named);

var country = "Hungary";
console.log("I live in:", country);
console.log("Type of age:", typeof age);
console.log("Type of name:", typeof named);
console.log("Type of country:", typeof country);

// ðŸ§® Combine strings and variables
console.log(`Hi, I'm ${named}, I'm ${age} years old and I live in ${country}.`);

